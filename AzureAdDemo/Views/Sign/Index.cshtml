
@{
    ViewBag.Title = "Index";
}


<h2>Signature demo</h2>
<script src="https://cdn.jsdelivr.net/npm/signature_pad@2.3.2/dist/signature_pad.min.js"></script>

<div id="signature-pad" class="signature-pad">
    <div class="signature-pad--body">
        <canvas width="664" height="373"></canvas>
    </div>
    <div class="signature-pad--footer">
        <div class="description">Sign above</div>

        <div class="container form-group row">
            <div class="form-inline">
                <button type="button" class="btn btn-warning" data-action="clear">Clear</button>
            </div>
            <div class="form-inline right">
                <button type="button" class="btn btn-success" data-action="save-png">Submit</button>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Sign/_ImageList.cshtml")


<script src="~/Scripts/app.js"></script>
<script src="~/Scripts/signature_pad.umd.js"></script>